hover($opacity = 0.8)
  cursor: pointer
  &:hover
    opacity: $opacity

centering()
  position: absolute
  margin: auto
  top: 0
  left: 0
  right: 0
  bottom: 0

monospaced-font()
  font-family: "Courier New",Consolas,monospace

circle-icon($size = 30px)
  calculatedPadding = $size / 5
  background-color: color5
  color: color1
  padding: calculatedPadding
  border-radius: 50%
  width: $size
  height: $size

text-truncate($font-size = 16px, $line-height = 1.8, $line = 3, $bg = #fff)
  position: relative
  max-height: 'calc(%s * %s * %s)' % ($font-size $line-height $line)
  font-size: $font-size
  line-height: $line-height
  white-space: pre-wrap
  overflow: hidden
  &::before, &::after
    position: absolute
    background: $bg
  &::before
    content: '...'
    top: 'calc(%s * %s * (%s - 1))' % ($font-size $line-height $line)
    right: 0
    width: 1em
  &::after
    content: ''
    width: 100%
    height: 100%

event-card()
  margin-bottom: 20px
  .title
    display: inline-block
    &:hover
      text-decoration: underline
    h3
      font-size: 20px
  .description
    word-break: break-word
    font-size: 16px
    overflow: hidden
    text-truncate()
  h4
    font-size: 16px
    margin: 10px 0
    &:first-child
      margin-top: 0
  .datetime
    font-size: 16px
    color: gray
    .date
      margin-right: 10px
  .users
    display: flex
    flex-wrap: wrap
  .user
    width: 40px
    height: 40px
    margin-right: 5px
    margin-bottom: 5px
    img
      width: 100%
      height: 100%
      border-radius: 50%
      border: 1px solid color2
